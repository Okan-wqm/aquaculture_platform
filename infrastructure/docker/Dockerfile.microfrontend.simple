# =============================================================================
# Aquaculture Platform - Microfrontend Dockerfile
# Serves pre-built Module Federation remotes via nginx
# =============================================================================

FROM nginx:alpine

# Install curl for health checks (wget not available in nginx:alpine by default)
RUN apk add --no-cache curl

# Remove default nginx config
RUN rm /etc/nginx/conf.d/default.conf

# Copy nginx config for microfrontends with CORS support
COPY infrastructure/docker/nginx/microfrontend.conf /etc/nginx/conf.d/default.conf

# Build argument for module path
ARG MODULE_PATH

# Copy pre-built dist folder
COPY ${MODULE_PATH}/dist /usr/share/nginx/html

# Expose default HTTP port
EXPOSE 80

# Health check - verify nginx is responding and remoteEntry.js is accessible
# Uses curl with fail-fast options for reliable health checking
HEALTHCHECK --interval=30s --timeout=5s --start-period=10s --retries=3 \
    CMD curl --fail --silent --head http://127.0.0.1:80/assets/remoteEntry.js || exit 1

# Start nginx in foreground
CMD ["nginx", "-g", "daemon off;"]
