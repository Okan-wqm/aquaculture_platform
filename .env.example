# =============================================================================
# Aquaculture Platform - Environment Variables
# Copy this file to .env and update values for your environment
# =============================================================================

# -----------------------------------------------------------------------------
# Database Configuration
# -----------------------------------------------------------------------------
DB_PASSWORD=your-secure-password-here
DATABASE_URL=postgres://aquaculture:${DB_PASSWORD}@localhost:5432/aquaculture

# -----------------------------------------------------------------------------
# Redis Configuration
# -----------------------------------------------------------------------------
REDIS_PASSWORD=your-redis-password-here
REDIS_URL=redis://:${REDIS_PASSWORD}@localhost:6379

# -----------------------------------------------------------------------------
# NATS Configuration
# -----------------------------------------------------------------------------
NATS_URL=nats://localhost:4222

# -----------------------------------------------------------------------------
# JWT Configuration
# -----------------------------------------------------------------------------
JWT_SECRET=your-very-long-and-secure-jwt-secret-key-here-min-32-chars
JWT_EXPIRES_IN=1h
REFRESH_TOKEN_EXPIRES_IN=7d

# -----------------------------------------------------------------------------
# MinIO / S3 Configuration
# Used for file storage (documents, images, etc.)
# -----------------------------------------------------------------------------
MINIO_USER=minioadmin
MINIO_PASSWORD=your-minio-password
MINIO_ENDPOINT=localhost
MINIO_PORT=9000
MINIO_USE_SSL=false
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=your-minio-password
MINIO_BUCKET=aquaculture
MINIO_REGION=us-east-1

# -----------------------------------------------------------------------------
# SMTP Configuration (for notifications)
# -----------------------------------------------------------------------------
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your-smtp-user
SMTP_PASS=your-smtp-password
SMTP_FROM=noreply@aquaculture.local

# -----------------------------------------------------------------------------
# Container Registry (for production)
# -----------------------------------------------------------------------------
REGISTRY=ghcr.io/your-org
VERSION=latest

# -----------------------------------------------------------------------------
# Observability
# -----------------------------------------------------------------------------
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317
LOG_LEVEL=info

# -----------------------------------------------------------------------------
# Application URLs (for frontend configuration)
# -----------------------------------------------------------------------------
API_URL=http://localhost:3000
APP_URL=http://localhost:8080

# -----------------------------------------------------------------------------
# Feature Flags
# -----------------------------------------------------------------------------
ENABLE_SWAGGER=true
ENABLE_GRAPHQL_PLAYGROUND=true

# -----------------------------------------------------------------------------
# MQTT Broker Configuration
# -----------------------------------------------------------------------------
MQTT_ENABLED=true
MQTT_BROKER_URL=mqtt://localhost:1883
MQTT_USERNAME=
MQTT_PASSWORD=

# -----------------------------------------------------------------------------
# Edge Device Provisioning
# -----------------------------------------------------------------------------
# Public URL for edge devices to download installer script and activate
# For local development: Use your LAN IP (run 'ipconfig' to find it)
# For production: Use your public domain (e.g., https://api.yourdomain.com)
PROVISIONING_API_BASE_URL=http://localhost:3000

# MQTT broker address for edge devices to connect
# For local development: Use your LAN IP (same as above)
# For production: Use your public MQTT domain (e.g., mqtt.yourdomain.com)
MQTT_BROKER_HOST=localhost
MQTT_BROKER_PORT=1883

# GitHub repository for edge-agent binary downloads
# Format: owner/repo (e.g., Okan-wqm/sens)
EDGE_AGENT_GITHUB_REPO=Okan-wqm/sens

# Provisioning token validity (hours)
PROVISIONING_TOKEN_HOURS=24
