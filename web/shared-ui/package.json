{
  "name": "@aquaculture/shared-ui",
  "version": "1.0.0",
  "description": "Aquaculture Platform paylaşımlı UI kütüphanesi",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./styles": {
      "import": "./dist/styles/index.mjs",
      "require": "./dist/styles/index.js"
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "dev": "vite build --watch",
    "build": "tsc && vite build && echo {\"name\":\"@aquaculture/shared-ui\",\"version\":\"1.0.0\",\"main\":\"index.js\",\"module\":\"index.mjs\",\"types\":\"index.d.ts\"} > dist/package.json",
    "build:types": "tsc --emitDeclarationOnly",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "peerDependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "dependencies": {
    "@tanstack/react-query": "^5.17.0",
    "clsx": "^2.1.0",
    "react-router-dom": "^6.21.0",
    "tailwind-merge": "^3.4.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vitejs/plugin-react": "^4.2.0",
    "autoprefixer": "^10.4.16",
    "eslint": "^8.56.0",
    "eslint-plugin-react": "^7.33.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.3.0",
    "vite": "^5.0.0",
    "vite-plugin-dts": "^3.7.0",
    "vitest": "^1.1.0"
  },
  "keywords": [
    "aquaculture",
    "ui",
    "react",
    "components",
    "design-system"
  ],
  "author": "Aquaculture Platform Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/aquaculture/platform.git",
    "directory": "web/shared-ui"
  },
  "publishConfig": {
    "access": "public"
  }
}
